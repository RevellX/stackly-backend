@model stackly.Models.Example
@using Microsoft.CodeAnalysis.Differencing
@{
    var error = ViewData["Error"] as string;
    ViewData["Title"] = "Edit";
}
<h2>Example - @ViewData["Title"]</h2>
<a href="/example"><button type="button" aria-label="Go back">Go to list</button></a>
<p>Item form: </p>

@if (!string.IsNullOrEmpty(error))
{
    <div role="alert" class="validation-summary-errors">
        @error
    </div>
}

<form action="/example/edit/@Model.Id" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" id="Id" name="Id" value="@Model.Id" />
    <div>
        <label for="Name">Name</label>
        <input type="text" id="Name" name="Name" value="@Model?.Name"/>
    </div>
    <div>
        <label for="Price">Price</label>
        <input id="Price" name="Price" value="@Model?.Price"/>
    </div>
    <button type="submit">Edit</button>
</form>