@model StacklyBackend.Models.Category;

@{
    ViewData["Title"] = "Delete";
}

<h2>Category - @ViewData["Title"]</h2>
<a href="/category"><button aria-label="Go back">Go to list</button></a>
<p>Item delete confirmation form: </p>
<form action="/category/delete/@Model.Id" method="post">
    @Html.AntiForgeryToken()
    <div>
        <p>Are you sure you wan to delete @Model.Name?</p>
    </div>
    <a href="/category"><button type="button" aria-label="Deny">No</button></a>
    <button type="submit">Yes</button>
</form>