@model List<StacklyBackend.Models.Category>
@using Microsoft.AspNetCore.Http


@{
    ViewData["Title"] = "Categories";
    bool isGroupSelected = ViewBag.IsGroupSelected as bool? ?? false;
}
@section styles {
    <link rel="stylesheet" href="~/css/tables.css" />
}

<div class="entry-section">
    <a href="@Url.Action("Index","Home")" class="btn-back" aria-label="Go back">
        <i class="fa-solid fa-chevron-left"></i>
    </a>
    <h2>@ViewData["Title"]</h2>
</div>

<div class="info-section">
    <p>Manage product categories for your inventory.</p>
    
    <div class="select-group">
        <small>Group</small>
        @await Component.InvokeAsync("GroupDropdown")
    </div>
</div>

@if (!isGroupSelected)
{
    <div class="alert-box">
        <i class="fa-solid fa-triangle-exclamation"></i> 
        <strong>Attention!</strong>
        <p>Please select a group from the dropdown above to view categories.</p>
    </div>
}
else
{
    <div class="toolbar-section">
        <a asp-controller="Category" asp-action="Create" class="btn-primary">
            <i class="fa-solid fa-plus"></i>
            Add New Category
        </a>
    </div>
    <div class="table-container">
        @if (Model == null || !Model.Any())
        {
            <div class="empty-state">
                <i class="fa-solid fa-layer-group"></i>
                <h3>No categories found</h3>
                <p>Start by adding a new category to organize your items.</p>
            </div>
        }
        else
        {
            <table class="stackly-table">
                <thead>
                    <tr>
                        <th class="col-id">ID</th>
                        <th>Category Name</th>
                        <th>Group</th>
                        <th>Amount</th>
                        <th class="col-actions">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td class="col-id" title="@category.Id">
                                <span class="cell-id-mono">#@category.Id</span>
                            </td>
                            
                            <td class="cell-name-bold">
                                @category.Name
                            </td>
                            
                            <td>
                                <span class="group-badge">
                                    @(category.Group?.Name ?? "-")
                                </span>
                            </td>
                            <td class="text-center">
                                <span class="count-pill @(category.DisplayCount == 0 ? "empty" : "")">
                                    @category.DisplayCount
                                </span> 
                            </td>
                            
                            <td class="col-actions">
                                <div class="table-actions">
                                    <a asp-action="Edit" asp-route-id="@category.Id" class="btn-card-action" title="Edit">
                                        <i class="fa-solid fa-pen"></i>
                                    </a>

                                    @* <a asp-action="Details" asp-route-id="@category.Id" class="btn-card-action" title="Details"> *@
                                    @*     <i class="fa-solid fa-circle-info"></i> *@
                                    @* </a> *@
                                    
                                    <button type="button" 
                                            class="btn-card-action delete" 
                                            title="Delete"
                                            onclick="confirmDeleteCategory('@category.Id', '@category.Name')">
                                        <i class="fa-solid fa-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
}

<script>
    function confirmDeleteCategory(id, name) {
        document.getElementById('deleteItemName').innerText = name;
        var baseUrl = '@Url.Action("Delete", "Category")';
        document.getElementById('deleteForm').action = baseUrl + '/' + id;
        
        document.getElementById('deleteModal').style.display = 'flex';
    }
</script>

