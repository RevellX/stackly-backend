@model StacklyBackend.Models.Group
@{
    ViewData["Title"] = "Create Group";
    var error = ViewData["Error"] as string;
}

@section Styles {
    <link rel="stylesheet" href="~/css/forms.css" />
}

<div class="entry-section">
    <a href="/group" class="btn-back" aria-label="Go back">
        <i class="fa-solid fa-chevron-left"></i>
    </a>
    <h2>@ViewData["Title"]</h2>
</div>

@if (!string.IsNullOrEmpty(error))
{
    <div class="alert-box">
        <i class="fa-solid fa-circle-exclamation"></i>
        <strong>Error:</strong> @error
    </div>
}

<div class="info-section">
    <p>Create a new group to organize users. You can add members after creating the group.</p>
</div>

<div class="form-container">
    <form-builder controller="Group" action="Create" method="post">
        
        <form-input-builder for="Name">
            Group Name
        </form-input-builder>
        
        <div class="form-actions">
            <form-submit-builder>
                Create Group
            </form-submit-builder>
        </div>

    </form-builder>
</div>