@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

@section Styles {
    <link rel="stylesheet" href="~/css/login.css" />
}

<h1>@ViewData["Title"]</h1>
<div class="login-container">
    <section class="login-card">
        <form id="account" method="post">
            <h2>Log In</h2>
            <p class="subtitle">Use your local account to access your dashboard.</p>
            
            <div asp-validation-summary="ModelOnly" class="error-text" role="alert"></div>

            <div class="form-group">
                <label asp-for="Input.Email">Email Address</label>
                <input asp-for="Input.Email" class="form-input" autocomplete="username" placeholder="name@example.com" />
                <span asp-validation-for="Input.Email" class="error-text"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Password">Password</label>
                <input asp-for="Input.Password" class="form-input" autocomplete="current-password" placeholder="••••••••" />
                <span asp-validation-for="Input.Password" class="error-text"></span>
            </div>

            <div class="form-options">
                <label class="checkbox-container">
                    <input asp-for="Input.RememberMe" />
                    <span>@Html.DisplayNameFor(m => m.Input.RememberMe)</span>
                </label>
                <a id="forgot-password" asp-page="./ForgotPassword" class="link">Forgot?</a>
            </div>

            <button id="login-submit" type="submit" class="btn-submit">Log in</button>

            <div class="form-footer">
                <p>New here? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="link">Create an account</a></p>
            </div>
        </form>
    </section>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
